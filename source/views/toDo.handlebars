<!doctype html>
<html>
<head>	
<link rel="stylesheet" href="/css/style.css">
</head>
<h1 class="OK">Hello {{name}} Here is your To Do List!</h1>
<h2>You have {{toDoCount}} items on your to do list.</h2>

<form method="post">
  <input type="text" name="name" id="toDoName">
  <input type="text" name="city" id="toDoName">
  <input type="text" name="temp" id="toDoName">
  <input type="submit" name="Add Item" value="Add Item">
</form>

{{#if toDo}}
<ul>
  {{#each toDo}}
  <li>
    <h3 class="{{this.className}}"> 
			{{this.name}} {{this.city}} {{this.temp}}</h3>
    <form method="post">
      <input type="hidden" name="id" value="{{this.id}}">
      <input type="submit" name="Done" value="Mark as Done">
    </form>
  </li>
  {{/each}}
</ul>
{{/if}}
</html>
